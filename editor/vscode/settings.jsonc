{
    // Core settings:
    "audioCues.volume": 0,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.accessibilitySupport": "off",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.detectIndentation": false,
    "editor.fontFamily": "DejaVu Sans Mono",
    "editor.fontSize": 14,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.insertSpaces": true,
    "editor.lineNumbers": "relative",
    "editor.rulers": [],
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.smoothScrolling": true,
    "editor.tabSize": 4,
    "editor.wordWrap": "off",
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "files.exclude": {
        "**/.vscode": true,
        "**/target": true,
        "**/__pycache__": true
    },
    "files.watcherExclude": {
        "**/.vscode": true,
        "**/target": true,
        "**/__pycache__": true
    },
    "git.inputValidationSubjectLength": 72,
    "git.mergeEditor": false,
    "search.exclude": {
        "**/.vscode": true,
        "**/target": true,
        "**/__pycache__": true
    },
    "search.useGlobalIgnoreFiles": true,
    "security.workspace.trust.banner": "never",
    "telemetry.telemetryLevel": "off",
    "terminal.external.osxExec": "iTerm2.app",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.scrollback": 100000,
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "inherit",
    "window.title": "${rootName}",
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "workbench.editor.empty.hint": "hidden",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.smoothScrolling": true,
    "workbench.startupEditor": "none",

    // Extension specific:
    "gitblame.infoMessageFormat": "[#${commit.hash_short, 7}] ${commit.summary}",
    "gitblame.statusBarMessageFormat": "${author.name} (${time.ago})",
    "go.toolsManagement.checkForUpdates": "off",
    "java.codeGeneration.insertionLocation": "lastMember",
    "java.compile.nullAnalysis.mode": "automatic",
    "java.completion.importOrder": [
        "#",
        "java",
        "javax",
        "jakarta",
        ""
    ],
    "java.configuration.runtimes": [],
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.debug.settings.enableRunDebugCodeLens": false,
    "java.debug.settings.forceBuildBeforeLaunch": true,
    "java.eclipse.downloadSources": true,
    "java.format.settings.url": "~/.eclipse-formatter.xml",
    "java.maven.downloadSources": true,
    "notebook.lineNumbers": "on",
    "redhat.telemetry.enabled": false,
    "spring-boot.ls.problem.version-validation.UPDATE_LATEST_MAJOR_VERSION": "IGNORE",
    "spring-boot.ls.problem.version-validation.UPDATE_LATEST_MINOR_VERSION": "IGNORE",
    "spring-boot.ls.problem.version-validation.UPDATE_LATEST_PATCH_VERSION": "IGNORE",
    "vim.foldfix": true,
    "vim.useSystemClipboard": true,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.config/nvim/init.vim",

    // Language specific:
    "[go]": {
        "editor.insertSpaces": false
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "[css][html][javascript][scss][typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    }
}
